{
  "kind": "Job",
  "apiVersion": "batch/v1",
  "metadata": {
    "name": "tesk-filer"
  },
  "spec": {
    "template": {

      "metadata": { "name": "tesk-filer" },
      "spec": {
        "containers": [
          {
            "name": "filer",
            "image": "eu.gcr.io/tes-wes/filer:v0.1.0",
            "args": [
              "$(JSON_INPUT)"
            ],
            "env": [
              { 
                "name": "JSON_INPUT",
                "value": ""
              }
            ],
          "volumeMounts": [
              {
                "name": "test-volume",
                "mountPath": "/mount/test-volume"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "test-volume",
            "emptyDir": {}
          }
        ],
        "restartPolicy": "Never"
      }
    }
  }
}
