{
  "kind": "Job",
  "apiVersion": "batch/v1",
  "metadata": {
    "name": "kubectl-taskmaster"
  },
  "spec": {
    "template": {

      "metadata": { "name": "kubectl-taskmaster" },
      "spec": {
        "containers": [
          {
            "name": "taskmaster",
            "image": "eu.gcr.io/tes-wes/taskmaster:v0.1.2",
            "args": [
              "$(JSON_INPUT)",
              "-fv",
              "v0.1.2"
            ],
            "ports": [
              {
                "containerPort": 8080
              }
            ],
            "env": [
              {
                "name": "KUBERNETES_RO_SERVICE_HOST",
                "value": "127.0.0.1"
              },
              {
                "name": "KUBERNETES_RO_SERVICE_PORT",
                "value": "8001"
              },
              { 
                "name": "JSON_INPUT",
                "value": "{\"outputs\":[{\"url\":\"\",\"path\":\"/container/output\",\"type\":\"FILE\"}],\"inputs\":[{\"name\":\"infile\",\"description\":\"md5suminputfile\",\"url\":\"http://ftp.ebi.ac.uk/pub/blast/db/16SMicrobial.tar.gz\",\"path\":\"/container/input\",\"type\":\"FILE\"}],\"volumes\":[\"/tmp/tmp1\",\"/tmp/tmp2\"],\"executors\":[{\"apiVersion\":\"batch/v1\",\"kind\":\"Job\",\"metadata\":{\"annotations\":{\"tes-task-name\":\"MD5example\"},\"labels\":{\"job-type\":\"executor\",\"taskmaster-name\":\"task-5473c590\",\"executor-no\":\"0\"},\"name\":\"task-5473c590-ex-00\"},\"spec\":{\"template\":{\"metadata\":{\"name\":\"task-5473c590-ex-00\"},\"spec\":{\"containers\":[{\"args\":[\"perl\",\"-Mbignum\u003dbpi\",\"-wle\",\"printbpi(10000)\"],\"command\":[],\"image\":\"perl\",\"name\":\"task-5473c590-ex-00\",\"resources\":{\"requests\":{\"memory\":\"1.0Gi\",\"cpu\":\"1\"}},\"volumeMounts\":[{\"name\":\"PVC\",\"readOnly\":false}],\"workingDir\":\"/tmp\"}],\"restartPolicy\":\"Never\",\"volumes\":[{\"name\":\"PVC\",\"persistentVolumeClaim\":{\"readOnly\":false}}]}}}},{\"apiVersion\":\"batch/v1\",\"kind\":\"Job\",\"metadata\":{\"annotations\":{\"tes-task-name\":\"MD5example\"},\"labels\":{\"job-type\":\"executor\",\"taskmaster-name\":\"task-5473c590\",\"executor-no\":\"1\"},\"name\":\"task-5473c590-ex-01\"},\"spec\":{\"template\":{\"metadata\":{\"name\":\"task-5473c590-ex-01\"},\"spec\":{\"containers\":[{\"args\":[\"perl\",\"-Mbignum\u003dbpi\",\"-wle\",\"printbpi(10000)\"],\"command\":[],\"image\":\"perl\",\"name\":\"task-5473c590-ex-01\",\"resources\":{\"requests\":{\"memory\":\"1.0Gi\",\"cpu\":\"1\"}},\"volumeMounts\":[{\"name\":\"PVC\",\"readOnly\":false}],\"workingDir\":\"/tmp\"}],\"restartPolicy\":\"Never\",\"volumes\":[{\"name\":\"PVC\",\"persistentVolumeClaim\":{\"readOnly\":false}}]}}}}],\"resources\":{\"disk_gb\":100.0}}"
              }
            ],
          "volumeMounts": [
              {
                "name": "test-volume",
                "mountPath": "/mount/test-volume"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "test-volume",
            "emptyDir": {}
          }
        ],
        "restartPolicy": "Never"
      }
    }
  }
}
