{
  "kind": "Job",
  "apiVersion": "batch/v1",
  "metadata": {
    "name": "kubectl-taskmaster"
  },
  "spec": {
    "template": {

      "metadata": { "name": "kubectl-taskmaster" },
      "spec": {
        "containers": [
          {
            "name": "taskmaster",
            "image": "eu.gcr.io/tes-wes/taskmaster:v0.0.6",
            "args": [
              "$(JSON_INPUT)"
            ],
            "ports": [
              {
                "containerPort": 8080
              }
            ],
            "env": [
              {
                "name": "KUBERNETES_RO_SERVICE_HOST",
                "value": "127.0.0.1"
              },
              {
                "name": "KUBERNETES_RO_SERVICE_PORT",
                "value": "8001"
              },
              { 
                "name": "JSON_INPUT",
                "value": "{\"executors\":[{\"apiVersion\":\"batch/v1\",\"kind\":\"Job\",\"metadata\":{\"name\":\"task-0852-ex0\"},\"spec\":{\"template\":{\"metadata\":{\"name\":\"md5-example\"},\"spec\":{\"containers\":[{\"command\":[\"perl\",\"-Mbignum\u003dbpi\",\"-wle\",\"print bpi(10000)\"],\"image\":\"perl\",\"name\":\"md5-example-ex0\",\"resources\":{\"requests\":{\"memory\":\"1.0Gi\",\"cpu\":\"1\"}}}],\"restartPolicy\":\"Never\"}}}},{\"apiVersion\":\"batch/v1\",\"kind\":\"Job\",\"metadata\":{\"name\":\"task-0852-ex1\"},\"spec\":{\"template\":{\"metadata\":{\"name\":\"md5-example\"},\"spec\":{\"containers\":[{\"command\":[\"perl\",\"-Mbignum\u003dbpi\",\"-wle\",\"print bpi(10000)\"],\"image\":\"perl\",\"name\":\"md5-example-ex1\",\"resources\":{\"requests\":{\"memory\":\"1.0Gi\",\"cpu\":\"1\"}}}],\"restartPolicy\":\"Never\"}}}}]}"
              }
            ],
          "volumeMounts": [
              {
                "name": "test-volume",
                "mountPath": "/mount/test-volume"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "test-volume",
            "emptyDir": {}
          }
        ],
        "restartPolicy": "Never"
      }
    }
  }
}
