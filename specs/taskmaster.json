{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "kubectl-tester"
  },
  "spec": {
    "containers": [
      {
        "name": "taskmaster",
        "image": "eu.gcr.io/tes-wes/taskmaster:v0.0.4.2",
        "command": [
          "&", "sh", "-c", "sleep 10000"
        ],
        "ports": [
          {
            "containerPort": 8080
          }
        ],
        "env": [
          {
            "name": "KUBERNETES_RO_SERVICE_HOST",
            "value": "127.0.0.1"
          },
          {
            "name": "KUBERNETES_RO_SERVICE_PORT",
            "value": "8001"
          }
        ],
        "volumeMounts": [
          {
            "name": "test-volume",
            "mountPath": "/mount/test-volume"
          }
        ]
      },
      {
        "name": "kubectl",
        "image": "gcr.io/google_containers/kubectl:v0.18.0-120-gaeb4ac55ad12b1-dirty",
        "imagePullPolicy": "Always",
        "args": [
          "proxy", "-p", "8001"
        ]
      }
    ],
    "volumes": [
      {
        "name": "test-volume",
        "emptyDir": {}
      }
    ]
  }
}
